{
  "compilerOptions": {
    "target": "ES2020",                 // Modern JS features but still Node-friendly
    "module": "CommonJS",               // Because Node understands this best
    "lib": ["ES2020"],                  // Use ES2020 standard library
    "outDir": "./dist",                 // Compiled files go here
    "rootDir": "./src",                 // Your source files live here
    "strict": true,                     // Turn on all type-checking strictness
    "esModuleInterop": true,           // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],              // Grab all TypeScript files in src
  "exclude": ["node_modules", "dist"]  // Skip unnecessary stuff
}
